{
  "manifest_version": 3,
  "name": "LenQuant Trading Assistant",
  "version": "1.0.1",
  "description": "Real-time AI trading coach for multiple exchanges, integrated with LenQuant",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  
  "host_permissions": [
    "https://www.binance.com/*",
    "https://fapi.binance.com/*",
    "https://api.binance.com/*",
    "https://www.bybit.com/*",
    "https://api.bybit.com/*",
    "https://www.okx.com/*",
    "https://lenquant.com/*",
    "https://www.lenquant.com/*",
    "http://localhost:8000/*"
  ],
  
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID_HERE",
    "scopes": ["email", "profile", "openid"]
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.binance.com/*/futures/*",
        "https://www.bybit.com/trade/*",
        "https://www.okx.com/trade-*"
      ],
      "js": ["license-manager.js", "auth-ui.js", "feature-gate.js", "dist/content.js"],
      "css": ["panel.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "*.css"],
      "matches": [
        "https://www.binance.com/*",
        "https://www.bybit.com/*",
        "https://www.okx.com/*"
      ]
    }
  ],
  
  "options_page": "options.html"
}
